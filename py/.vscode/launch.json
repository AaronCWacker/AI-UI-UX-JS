{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "ALL (FastAPI + Streamlit + Gradio)",
      "configurations": [
        "FastAPI :8000",
        "Streamlit :8501",
        "Gradio :7860"
      ],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "FastAPI :8000",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "fastapi_app:app",
        "--host", "0.0.0.0",
        "--port", "8000"
      ],
      "cwd": "C:\\SRC\\py",
      "console": "integratedTerminal",
      "subProcess": true,
      "justMyCode": true
    },
    {
      "name": "Streamlit :8501",
      "type": "python",
      "request": "launch",
      "module": "streamlit",
      "args": [
        "run", "streamlit_app.py",
        "--server.address", "0.0.0.0",
        "--server.port", "8501"
      ],
      "cwd": "C:\\SRC\\py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Gradio :7860",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "gradio_app:api",
        "--host", "0.0.0.0",
        "--port", "7860"
      ],
      "cwd": "C:\\SRC\\py",
      "console": "integratedTerminal",
      "subProcess": true,
      "justMyCode": true
    }
  ]
}
